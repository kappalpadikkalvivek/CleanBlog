@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedModels.Home>
@{
    Layout = "master.cshtml";
    var selection = Model.Root().Children.Where(x => x.IsVisible()).ToArray();
}

<!-- Masthead-->
<header class="masthead">
    <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
        <div class="d-flex justify-content-center">
            <div class="text-center">
                <h1 class="mx-auto my-0 text-uppercase">@Model.PageTitle</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">@Model.PageDescription</h2>
                <a class="btn btn-primary" href="@selection[0].Url">Get Started</a>
            </div>
        </div>
    </div>
</header>